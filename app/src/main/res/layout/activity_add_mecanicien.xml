    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/save" android:layout_alignParentStart="true" android:layout_alignParentEnd="true" android:layout_marginStart="123dp" android:layout_marginTop="27dp" android:layout_marginEnd="123dp" android:text="HOME" android:textColor="@color/white" android:backgroundTint="#213A5C"/>
